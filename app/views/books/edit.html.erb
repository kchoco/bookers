<h2>Editing Book</h2>
    <% if @book.errors.any? %>
      <div id="error_explanation">
        <h2><%= @book.errors.count %>件のエラーが発生しました</h2>
        <% @book.errors.full_messages.each do |message| %>
          <ul>
            <li>error<%= message %></li>
          </ul>
         <% end %>
      </div>
    <% end %>

<%= form_with model:@book, url:book_path(@book.id), local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <br>
  <%= f.submit 'Update Book' %>
  <br>
   <p><%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", '/books' %></p>

  <% end %>



